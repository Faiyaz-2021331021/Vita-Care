<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Form Fields -->
            <EditText
                android:id="@+id/doctor_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:hint="Enter Full Name"
                android:background="@drawable/rounded_input"
                android:paddingHorizontal="16dp"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/doctor_contact"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:hint="Enter Contact Number"
                android:background="@drawable/rounded_input"
                android:inputType="phone"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/doctor_main_specialty"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:hint="Enter Main Specialty"
                android:background="@drawable/rounded_input"
                android:inputType="text"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/doctor_specialist"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:hint="Enter Specialist Field"
                android:background="@drawable/rounded_input"
                android:inputType="text"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/doctor_degree"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:hint="Enter Degree"
                android:background="@drawable/rounded_input"
                android:inputType="text"
                android:paddingHorizontal="16dp" />

            <EditText
                android:id="@+id/doctor_chamber_address"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:hint="Enter Chamber Address"
                android:background="@drawable/rounded_input"
                android:inputType="textMultiLine"
                android:gravity="top|start"
                android:paddingHorizontal="16dp" />

            <Button
                android:id="@+id/doctor_signup_button"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="48dp"
                android:text="Done"
                android:textColor="#24CAB0"
                android:textStyle="bold"
                android:backgroundTint="#430178"/>

            <TextView
                android:id="@+id/doctor_login_redirect_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="Already have an account? Login"
                android:textColor="#1D42B1"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="#FFFFFF"
        android:backgroundTint="#C62828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_media_previous"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:tint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
