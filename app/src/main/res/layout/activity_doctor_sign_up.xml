<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <!-- Doctor Name -->
    <EditText
        android:id="@+id/doctor_name"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Full Name"
        android:inputType="textPersonName"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contact Number -->
    <EditText
        android:id="@+id/doctor_contact"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Contact Number"
        android:inputType="phone"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Specialty -->
    <EditText
        android:id="@+id/doctor_main_specialty"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Main Specialty"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_contact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Specialist -->
    <EditText
        android:id="@+id/doctor_specialist"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Specialist Field"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_main_specialty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Degree -->
    <EditText
        android:id="@+id/doctor_degree"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Degree"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/doctor_specialist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Chamber Address -->
    <EditText
        android:id="@+id/doctor_chamber_address"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_input"
        android:hint="Enter Chamber Address"
        android:inputType="textMultiLine"
        android:paddingHorizontal="16dp"
        android:gravity="top|start"
        app:layout_constraintTop_toBottomOf="@id/doctor_degree"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Submit Button -->
    <Button
        android:id="@+id/doctor_signup_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#1D42B1"
        android:text="Sign Up"
        android:textColor="#24CAB0"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/doctor_chamber_address" />

    <!-- Redirect to Login Text -->
    <TextView
        android:id="@+id/doctor_login_redirect_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Already have an account? Login"
        android:textColor="#1D42B1"
        app:layout_constraintTop_toBottomOf="@id/doctor_signup_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_media_previous"
        app:tint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
