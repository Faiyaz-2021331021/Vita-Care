<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:contentDescription="Back"
        android:src="@android:drawable/ic_media_previous"
        android:scaleType="fitCenter"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"/>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Hospital Image -->
            <ImageView
                android:id="@+id/hospitalImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/dummy_hospital"
                android:scaleType="centerCrop"
                android:contentDescription="Hospital Image"
                android:layout_marginBottom="16dp" />

            <!-- Hospital Name -->
            <TextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#092EE6"
                android:layout_marginBottom="16dp" />

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Us:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#092EE6"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/hospitalAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address goes here"
                android:textSize="16sp"
                android:textColor="#092EE6"
                android:layout_marginBottom="12dp" />

            <!-- Beds -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beds:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#092EE6"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/hospitalCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="16sp"
                android:textColor="#092EE6"
                android:layout_marginBottom="12dp" />

            <!-- ICU Beds -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ICU Beds:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#092EE6"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/hospitalICU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="16sp"
                android:textColor="#092EE6"
                android:layout_marginBottom="16dp" />

            <!-- Contact Us -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#092EE6"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/hospitalContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+8801XXXXXXXXX"
                android:textSize="16sp"
                android:textColor="#092EE6"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
